<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Bebas+Neue|Roboto+Slab:300,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
  </head>

  <body>
    <nav class="primary-navbar">
      <div class="navbar-content">
        <main>
          <%= link_to "<i class='material-icons header-logo'>pets</i>".html_safe, "/" %>
          <%= link_to "Shelters", "/shelters", class: "header-links" %>
          <%= link_to "Pets", "/pets", class: "header-links" %>
        </main>
        <aside class="header-aside">
          <%= link_to "Favorites: #{favorites.total_count}", '/favorites' %>
          <p>Welcome, <span class="header-username">Guest</span></p>
        </aside>
      </div>
    </nav>
    <section class="flash-response">
      <%= flash[:error] %>
      <%= flash[:notice] %>
      <%= flash[:success] %>
    </section>
    <%= yield %>
    <footer class="primary-footer">
      <section class="footer-content">
        <h2>Adopt Dont Shop</h2>
      </section>
    </footer>
  </body>
</html>
