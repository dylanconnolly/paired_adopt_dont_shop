<section class="sub-header">
  <h1><%= @pet.name %></h1>
  <%= link_to "Edit Pet", "/pets/#{@pet.id}/edit" %>
  <%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
  <% if favorites.exists?(@pet.id) %>
    <%= link_to "Remove From Favorites", "/favorites/#{@pet.id}", method: :delete %>
  <% else %>
    <%= link_to "Add To Favorites", "/favorites/#{@pet.id}", method: :patch %>
  <% end %>
</section>

<img src="<%= @pet.image %>" height=50% width=50%>
<h3>Name: <%= @pet.name %></h3>
Description: <%= @pet.description %><br>
Approximate age: <%= @pet.approximate_age %><br>
Sex: <%= @pet.sex %><br>
Adoptable: <%= @pet.adoptable %>

<p>Applicants:</p>
<section id="applications">
<% @pet.applications.each do |application| %>
  <%= link_to "#{application.name}", "/applications/#{application.id}" %>
<% end %>
</section>
